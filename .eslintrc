{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4 ],
        "linebreak-style": ["error", "unix"],
        "no-multi-spaces": "error",
        "no-var": "error",
        "object-curly-spacing": ["error", "always"],
        "object-shorthand": ["error", "always"],
        "prefer-const": "error",
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", { "anonymous": "always", "named": "never" }],
        "strict": ["error", "never"]
    }
}
